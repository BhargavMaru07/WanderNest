<% layout("/layouts/boilerplate.ejs") %>
  <body>
    <div class="hero-section">
      <div class="container">
        <div class="home-container d-flex flex-wrap">
          <!-- Text Section -->
          <div class="text-content">
            <h1 class="text-content-h1">Hello, There</h1>
            <h2 class="text-content-h2">
              Add Your Own Listings!! Find New Customers
            </h2>
            <div class="btn-div">
              <a href="//listings/new"
                ><button class="text-content-btn">
                  <i class="fa-solid fa-plus"></i> &nbsp; Add Listing
                </button></a
              >
              <a href="/listings"
                ><button class="text-content-btn all-listing-btn">
                  <i class="fa-solid fa-eye"></i> &nbsp; All Listing
                </button></a
              >
            </div>
          </div>

          <!-- Image Section -->
          <div class="image-content">
            <img src="/homeImage.jpg" alt="Home Image" />
          </div>
        </div>
      </div>
      <div class="categories-container">
        <div class="category f">
          <i class="fa-solid fa-mountain"></i>
          <p>Mountains</p>
        </div>
        <div class="category s">
          <i class="fa-solid fa-umbrella-beach"></i>
          <p>Beaches</p>
        </div>
        <div class="category f">
          <i class="fa-solid fa-city"></i>
          <p>Cities</p>
        </div>
        <div class="category s">
          <i class="fa-solid fa-tree"></i>
          <p>Forests</p>
        </div>
        <div class="category f">
          <i class="fa-solid fa-snowflake"></i>
          <p>Snow Destinations</p>
        </div>
        <div class="category s">
          <i class="fa-solid fa-monument"></i>
          <p>Historical Sites</p>
        </div>
      </div>
    </div>


    <section class="services-section">
      <div class="services">
        <h1>Our Services</h1>
        <p>
          Discover a variety of services that help travelers and hosts make the
          most of their experiences.
        </p>
      </div>
      <div class="container-service">
        <div class="service">
          <div class="service-content">
            <h2>Property Listing</h2>
            <p>List your property and connect with travelers worldwide.</p>
            <a href="#">Learn More &nbsp;<i class="fa-solid fa-up-right-from-square"></i></a>
          </div>
          <div class="service-image">
            <img
              src="https://cdn-icons-png.flaticon.com/512/2777/2777142.png"
              alt="Property Listing"
            />
          </div>
        </div>
        <div class="service">
          <div class="service-content">
            <h2>Travel Experiences</h2>
            <p>Book unique travel experiences and guided tours.</p>
            <a href="#">Learn More &nbsp;<i class="fa-solid fa-up-right-from-square"></i></a>
          </div>
          <div class="service-image">
            <img
              src="https://cdn-icons-png.flaticon.com/512/869/869869.png"
              alt="Travel Experiences"
            />
          </div>
        </div>
        <div class="service">
          <div class="service-content">
            <h2>Secure Payments</h2>
            <p>Fast, secure, and reliable payment options for bookings.</p>
            <a href="#">Learn More &nbsp; <i class="fa-solid fa-up-right-from-square"></i></a>
          </div>
          <div class="service-image">
            <img
              src="https://tse1.mm.bing.net/th?id=OIP.K5qj7NgVyXN-VKE4zAqBYwHaFj&pid=Api&P=0&h=180"
              alt="Secure Payments"
            />
          </div>
        </div>
        <div class="service">
          <div class="service-content">
            <h2>24/7 Customer Support</h2>
            <p>Get round-the-clock assistance for all your queries.</p>
            <a href="#">Learn More &nbsp; <i class="fa-solid fa-up-right-from-square"></i></a>
          </div>
          <div class="service-image">
            <img
              src="https://cdn-icons-png.flaticon.com/512/1256/1256650.png"
              alt="Customer Support"
            />
          </div>
        </div>
      </div>
    </section>
  </body>
